
<table class="table table-dark table-striped">

    <thead>
        <tr>
            <th colspan="2">PROPRIEDADES</th>
        </tr>   
    </thead>
    
    <tbody>
        
        <tr>
            <td style="width: 30%;">Number</td>
            <td><%= @element['number'] %></td>
        </tr>
        <tr>
            <td>Symbol</td>
            <td><%= @element['symbol'] %></td>
        </tr>
        <tr>
            <td>Name</td>
            <td><%= @element['name'] %></td>
        </tr>
        <tr>
            <td>Atomic Mass</td>
            <td><%= @element['atomic_mass'] %></td>
        </tr>
        <tr>
            <td>Shells</td>
            <td><%= @element['shells'].join(', ') %></td>
        </tr>
        

        <% @element['details'].each do | key, value | %>
            <tr>
                <td>
                    <%= key.humanize.capitalize %>
                </td>
                <td>
                    <% if value.kind_of?(Array) %>
                        <%= value.join(', ') %>
                    <% else %>
                        <%= value %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>

</table>
